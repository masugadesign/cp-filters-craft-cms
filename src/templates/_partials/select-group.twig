{#
Parameters:
	typeKey : entries | assets | categories | users | tags
	groupOptions : An array of entry types, asset volumes, user/categories/tag groups.
	groupId : The ID of whichever group is currently selected.
#}

{% import "_includes/forms" as forms %}

{% switch typeKey %}
	{% case 'entries' %}
		{% set groupLabel = "Entry Type" %}
		{% set groupInstructions = "Select an Entry Type to filter by custom fields." %}
	{% case 'assets' %}
		{% set groupLabel = "Asset Volume" %}
		{% set groupInstructions = "Select an Asset Volume to filter by custom fields." %}
	{% case 'users' %}
		{% set groupLabel = null %}
		{% set groupInstructions = null %}
	{% case 'categories' %}
		{% set groupLabel = "Category Group" %}
		{% set groupInstructions = "Select a Category Group to filter by custom fields." %}
	{% case 'tags' %}
		{% set groupLabel = "Tag Group" %}
		{% set groupInstructions = "Select a Tag Group to filter by custom fields." %}
{% endswitch %}

{# We don't filter users by groups by default so the options might be empty. #}
{% if groupOptions %}
	{{ forms.selectField({
		label: groupLabel,
		instructions: groupInstructions,
		id: "groupId",
		name: "groupId",
		options: groupOptions,
		value: groupId,
		required : false
	}) }}
{% endif %}
